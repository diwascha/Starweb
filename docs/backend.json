{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the user."
        },
        "username": {
          "type": "string",
          "description": "The user's chosen username."
        },
        "permissions": {
          "type": "object",
          "description": "A map of module to action permissions."
        }
      },
      "required": ["id", "username"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores additional information about a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user this profile belongs to."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["userId"]
    },
    "PurchaseOrderItem": {
      "title": "Purchase Order Item",
      "type": "object",
      "properties": {
        "rawMaterialId": { "type": "string" },
        "rawMaterialName": { "type": "string" },
        "rawMaterialType": { "type": "string" },
        "size": { "type": "string" },
        "gsm": { "type": "string" },
        "bf": { "type": "string" },
        "quantity": { "type": "string" },
        "unit": { "type": "string" }
      }
    },
    "PurchaseOrderVersion": {
      "title": "Purchase Order Version",
      "description": "Represents a snapshot of a purchase order before an edit.",
      "type": "object",
      "properties": {
        "versionId": { "type": "string" },
        "replacedAt": { "type": "string", "format": "date-time" },
        "replacedBy": { "type": "string" },
        "data": {
          "type": "object",
          "properties": {
            "poDate": { "type": "string", "format": "date-time" },
            "items": { "type": "array", "items": { "$ref": "#/entities/PurchaseOrderItem" } },
            "companyName": { "type": "string" },
            "companyAddress": { "type": "string" },
            "panNumber": { "type": "string" },
            "status": { "type": "string" }
          }
        }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profiles for users."
    },
    "/purchaseOrders/{poId}": {
      "schema": {
        "type": "object",
        "properties": {
          "versions": { "type": "array", "items": { "$ref": "#/entities/PurchaseOrderVersion" } }
        }
      },
      "description": "Stores purchase orders with version history snapshots."
    }
  }
}